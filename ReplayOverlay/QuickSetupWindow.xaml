<Window x:Class="ReplayOverlay.QuickSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Setup" Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="First run detected. Configure OBS settings automatically?"
                       TextWrapping="Wrap" Margin="0,0,0,10"/>
            <CheckBox x:Name="DontShowAgain" Content="Do not show again"
                      Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnNo" Content="Skip" Width="90" Margin="0,0,10,0"/>
                <Button x:Name="BtnYes" Content="Configure" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
