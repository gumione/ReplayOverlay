<Window x:Class="ReplayOverlay.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="200" Height="80"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Focusable="False">
    <Border Background="#CC000000" CornerRadius="6" Padding="12">
        <TextBlock Text="Replay saved!"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Border>
</Window>
