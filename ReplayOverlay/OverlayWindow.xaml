<Window x:Class="ReplayOverlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        Background="#80000000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Left="10" Top="10"
        Width="260" Height="110"
        WindowStartupLocation="Manual">
    <Grid>
        <StackPanel Margin="10,5,10,10">
            <TextBlock x:Name="StatusLabel"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="Buffer: ?"/>
            <TextBlock x:Name="HintLabel"
                       FontSize="14"
                       Foreground="#DDDDDD"
                       Text="Ctrl+Alt+O – toggle overlay"
                       Margin="0,4,0,0"/>
        </StackPanel>
        <Button x:Name="BtnExit"
                Panel.ZIndex="1"
                Width="20" Height="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,4,0"
                FontWeight="Bold"
                Content="✕"
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>
